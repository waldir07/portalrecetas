<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Sube tu receta</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Lorem ipsum dolor sit amet consectetur adipisicing elit. Numquam, sequi? Corrupti necessitatibus
            aliquam officia mollitia?</p>
    </div>
</div>

<div class="row justify-content-center">


    
    <% if(  infoSubmitObj != '') { %> 
        <div class="col-8 alert alert-success" role="alert">
            <%= infoSubmitObj %> 
        </div>
    <% } %> 



    <div class="col-8">
        <form action="/submit-recipe" enctype="multipart/form-data" method="POST">
            <div class="row g-3">
                <div class="col-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control">
                </div>
                <div class="col-12">
                    <label for="name" class="form-label">Receta</label>
                    <input type="text" name="name" id="name" class="form-control">
                </div>
                <div class="col-12">
                    <label for="description" class="form-label">Descripción</label>
                    <textarea name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
                </div>

                <div class="col-12">
                    <label for="ingredients" class="form-label">Ingredientes</label><br>
                    <small>Ejemplo: oregano</small>
                    <div class="ingredientList">
                        <div class="ingredientDiv mb-1">
                            <input type="text" name="ingredients" class="form-control">
                        </div>
                    </div>
                </div>
                <div class="col-112">
                    <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+ ingredientes</button>
                </div>

                <div class="col-12">
                    <label for="category">Escoje la categoría</label>
                    <select class="form-select form-control" name="category" id="">
                        <option selected>Selecciona</option>
                        <option value="peruana">peruana</option>
                        <option value="americana">americana</option>
                        <option value="mexicana">mexicana</option>
                        <option value="china">china</option>
                        <option value="italiana">italiana</option>
                    </select>
                </div>

                <div class="col-12">
                    <label for="image">Imagen</label>
                    <input type="file" class="form-control" name="image" accept="image/*">
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Enviar Receta</button>
                </div>
            </div>

        </form>
    </div>
</div>